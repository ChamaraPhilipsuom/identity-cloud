        <div class="container-fluid">
            <div class="footer-text">WSO2 Cloud V: 1.2 . &copy; 2016 <i class="fw fw-wso2 fw-2x"></i> All Rights
                Reserved.
            </div>
        </div>
    </div>


    <!-- MODEL -->

    <div id="demote-confirm-modal" class="modal">
        <div class="modal-dialog modal-dialog-margin-top-md">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close close-override" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Creating User Directory</h4>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="form">
                                <div class="form-group">
                                    <label for="demote-reason-text" class="control-label">Please wait. This will take
                                        few seconds </label>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="../js/jquery-1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="../js/bootstrap-3.2.0/bootstrap.min.js"></script>
    <script src="../js/custom/constants.js"></script>
    <script src="../js/custom/custom.js"></script>
    <script src="js/directory.js"></script>
    <script src="js/jquery.validate.min.js"></script>
    <script>
        var messageContainer = "<div class='alert' role='alert'>" +
                "<span class='alert-content'></span></div>";

        $('.side-pane-trigger').click(function () {
            var rightPane = $('.right-pane');
            var leftPane = $('.left-pane');
            if (rightPane.hasClass('visible')) {
                rightPane.animate({"left": "0em"}, "slow").removeClass('visible');
                leftPane.animate({"left": "-18em"}, "slow");
                $(this).find('i').removeClass('fa-arrow-left').addClass('fa-reorder');
            } else {
                rightPane.animate({"left": "18em"}, "slow").addClass('visible');
                leftPane.animate({"left": "0em"}, "slow");
                $(this).find('i').removeClass('fa-reorder').addClass('fa-arrow-left');
            }
        });

        $('#btn-save').on('click', function (e) {
            initValidate();
            if ($("#agent-download-form").valid()) {
                $('#demote-confirm-modal').modal({
                    show: true
                });
                setTimeout(function () {
                    addOrUpdateUserDirectory();
                }, 1000);
            }
        });

        $("#agentUrl").keypress(function (e) {
            initValidate();
            if (e.which == 13) {
                if ($("#agent-download-form").valid()) {

                    $('#demote-confirm-modal').modal({
                        show: true
                    });
                    setTimeout(function () {
                        addOrUpdateUserDirectory();
                    }, 1000);
                }

            }
        });


    </script>

    <script>
        var cookie = null;
        var json = null;
        var userName = null;
        var serverUrl = window.location.host;
        $(function WindowLoad(event) {
            url = 'wss://' + serverUrl + '/' + ADMIN_PORTAL_NAME + '/session_manager.jag';
            console.log("************ " + url);
            ws = new WebSocket(url);

            ws.onopen = function () {
                console.log("web Socket onopen. ");
                ws.send("First Message open");
            };
            ws.onmessage = function (event) {
                var obj = $.parseJSON(event.data);
                cookie = obj.cookie;
                userName = obj.user;
                getDirectories();
            };
            ws.onclose = function () {
                console.log("web Socket onclose. ");
            };

        });


    </script>
</body>
</html>